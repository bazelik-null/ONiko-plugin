{
  "manifest_version": 2,
  "name": "oNiko",
  "version": "2.5",
  "description": "Adds Niko that follows your mouse (Sprites from OneShot)",
  "icons": {
    "96": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "options/options.html"
  }
}
