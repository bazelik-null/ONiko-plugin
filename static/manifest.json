{
  "manifest_version": 2,
  "name": "oNiko",
  "version": "2.6",
  "description": "Adds Niko that follows your mouse (Sprites from OneShot)",
  "icons": {
    "96": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/browser-polyfill.js",
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "lib/browser-polyfill.js",
      "scripts/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "options/options.html"
  },
  "web_accessible_resources": ["img/*"]
}
