{
  "manifest_version": 2,
  "name": "oNiko",
  "version": "2.0.1",
  "description": "Just Niko follows your mouse (Sprites from OneShot)",
  "icons": {
    "96": "resources/img/niko/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["resources/scripts/content.js"]
    }
  ],
  "background": {
    "scripts": ["resources/scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "resources/img/niko/icon.png",
    "default_popup": "resources/options.html"
  }
}
